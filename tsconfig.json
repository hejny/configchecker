{
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "target": "ES6",
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
